---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Frical Alimentos - Qualidade e Tradição em Carnes">
  
  <!-- Hero Section com background para testar o glassmorphism -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
    
    <!-- Background escuro estilizado -->
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-br from-[#1a2632] via-[#243342] to-[#1e2d3d]"></div>
      <!-- Efeitos de luz -->
      <div class="absolute top-0 right-0 w-[600px] h-[600px] bg-cyan-500/10 rounded-full blur-[120px]"></div>
      <div class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-blue-500/10 rounded-full blur-[100px]"></div>
      <!-- Linhas decorativas -->
      <div class="absolute top-1/4 right-1/4 w-px h-40 bg-gradient-to-b from-transparent via-cyan-400/30 to-transparent"></div>
      <div class="absolute bottom-1/3 right-1/3 w-32 h-px bg-gradient-to-r from-transparent via-cyan-400/20 to-transparent"></div>
    </div>
    
    <!-- Conteúdo -->
    <div class="relative z-10 text-center text-white px-6">
      <h1 class="text-5xl md:text-7xl lg:text-8xl font-demi mb-8 tracking-tight">
        Frical Alimentos
      </h1>
      <p class="text-xl md:text-2xl font-book text-white/70 max-w-2xl mx-auto mb-12">
        Qualidade e tradição em carnes desde 1996
      </p>
      <a 
        href="/produtos" 
        class="inline-block px-10 py-5 bg-white/10 hover:bg-white/20 rounded-2xl font-book text-lg transition-all duration-300 hover:scale-105 backdrop-blur-sm border border-white/10 hover:border-white/20"
      >
        Conheça nossos produtos
      </a>
    </div>
  </section>

  <!-- Segunda seção para testar scroll -->
  <section class="min-h-screen bg-gradient-to-b from-white to-gray-50 flex items-center justify-center">
    <div class="text-center px-6">
      <h2 class="text-4xl md:text-5xl font-demi text-gray-800 mb-6">
        Nossa História
      </h2>
      <p class="text-gray-600 font-book text-lg max-w-xl mx-auto">
        Role a página para testar o header fixo com efeito glassmorphism
      </p>
    </div>
  </section>

  <!-- Terceira seção -->
  <section class="min-h-screen bg-[#1e2d3d] flex items-center justify-center">
    <div class="text-center px-6">
      <h2 class="text-4xl md:text-5xl font-demi text-white mb-6">
        Seção Escura
      </h2>
      <p class="text-white/70 font-book text-lg">
        Veja como o header se comporta em fundos diferentes
      </p>
    </div>
  </section>

</Layout>