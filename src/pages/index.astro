---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Frical Alimentos - Qualidade e Tradição em Carnes">
  
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Background escuro para ver o efeito glass -->
    <div class="absolute inset-0 bg-gradient-to-br from-slate-900 via-slate-800 to-slate-700">
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-cyan-500/20 rounded-full blur-3xl"></div>
      <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-blue-500/20 rounded-full blur-3xl"></div>
    </div>
    
    <!-- Conteúdo -->
    <div class="relative z-10 text-center text-white px-4">
      <h1 class="text-5xl md:text-7xl font-demi mb-6">
        Frical Alimentos
      </h1>
      <p class="text-xl md:text-2xl font-book text-white/80 max-w-2xl mx-auto mb-8">
        Qualidade e tradição em carnes desde 1996
      </p>
      <a 
        href="/produtos" 
        class="inline-block px-8 py-4 bg-white/10 hover:bg-white/20 rounded-xl font-demi transition-all duration-300 hover:scale-105 backdrop-blur-sm"
      >
        Conheça nossos produtos
      </a>
    </div>
  </section>

  <!-- Seção clara para testar scroll -->
  <section class="min-h-screen bg-white flex items-center justify-center">
    <div class="text-center">
      <h2 class="text-4xl font-demi text-gray-800 mb-4">Segunda Seção</h2>
      <p class="text-gray-600 font-book">Role a página para testar o header fixo</p>
    </div>
  </section>

</Layout>